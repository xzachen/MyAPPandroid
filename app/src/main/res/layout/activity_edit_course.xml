<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.github.zeleven.mua.activities.EditCourseActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="50dp"
                    android:text="修改课程信息"
                    android:gravity="center"
                    android:textColor="#2b2727"
                    android:textSize="16sp"
                    android:textStyle="bold" />
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/editcname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="课程名字" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/editschoolYear"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="课程学年" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/editterm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="课程学期" />
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/editcredit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="课程学分" />
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/editintstartSection"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="开始节次" />
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/editendSection"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="结束节次" />
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/editstartWeek"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="开始周次" />
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/editendWeek"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="结束周次" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/editdayOfWeek"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="上课周次" />
                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/editclassroom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="上课教室" />
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/editteacher"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="任课教师" />
                </android.support.design.widget.TextInputLayout>
                <Button
                    android:id="@+id/editcourse"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="50dp"
                    android:background="@drawable/bt_shape_2"
                    android:stateListAnimator="@drawable/state_list_animator_z"
                    android:text="确认修改课程信息"
                    android:textColor="#2b2727"></Button>
            </LinearLayout>

    </ScrollView>





</android.support.constraint.ConstraintLayout>
